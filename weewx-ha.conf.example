# Example WeeWX configuration for weewx-home-assistant extension

[HomeAssistant]
    # MQTT broker settings
    [[mqtt]]
        hostname = localhost
        port = 1883
        # username = your_username
        # password = your_password
        client_id = weewx_ha
        keep_alive = 60

        # Optional TLS settings
        # [[[tls]]]
        #     ca_certs = /path/to/ca.crt

    # Station information
    [[station]]
        name = Weather Station
        model = Vantage Pro2
        manufacturer = Davis Instruments
        time_zone = Europe/Prague  # or use 'timezone' alias

    # Integration settings
    node_id = weewx
    discovery_topic_prefix = homeassistant
    state_topic_prefix = weather
    unit_system = METRICWX  # METRIC, METRICWX, or US

    # Language for localized sensor names (optional)
    # Supported values: cs, en (or omit for English default)
    # Falls back to English if translation not found
    lang = cs

    # Optional: Override or extend locale data (sensors, units, enums)
    # Overrides have highest priority: base YAML < localized YAML < config overrides
    # [[sensors]]
    #     # Override specific sensor configuration
    #     [[[outTemp]]]
    #         [[[[metadata]]]]
    #             name = "Custom Outdoor Temperature"
    #             device_class = "temperature"
    #
    # [[units]]
    #     # Override specific unit metadata
    #     [[[degree_C]]]
    #         value_template = "{{ value | round(0) }}"
    #
    # [[enums]]
    #     # Override enum mappings
    #     [[[forecast_rule]]]
    #         0 = "Custom: Mostly Clear"
    #         1 = "Custom: Partly Cloudy"
